---
import Layout from "../components/Layout.astro";
import Slider from "../components/Slider.astro";
---

<Layout title="Sravi Enterprises">
  <!-- Main Content Section -->
  <section class="py-12 bg-green-600">
    <div class="container mx-auto px-4">
      <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
        <!-- Left Column - Content -->
        <div class="flex flex-col justify-center">
          <h1 class="text-4xl font-bold mb-4 text-white">Sravi Enterprises</h1>
          <p class="text-xl mb-8 text-green-100">Authorised Sastry Balm Distributor for Tamil Nadu</p>
          <button class="bg-white hover:bg-green-50 text-green-600 font-bold py-2 px-4 rounded">
            Explore Our Products
          </button>
        </div>
        <!-- Right Column - Slider -->
        <div>
          <Slider />
        </div>
      </div>
    </div>
  </section>

  <!-- Product Categories -->
  <section class="py-8">
    <h2 class="text-3xl font-bold mb-8 text-center">Our Product Categories</h2>
    <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
      <div class="border rounded-lg p-6 text-center">
        <h3 class="text-xl font-bold mb-2">Electronics</h3>
        <p>Wide range of electronic components and devices</p>
      </div>
      <div class="border rounded-lg p-6 text-center">
        <h3 class="text-xl font-bold mb-2">Industrial Supplies</h3>
        <p>Essential supplies for your business needs</p>
      </div>
      <div class="border rounded-lg p-6 text-center">
        <h3 class="text-xl font-bold mb-2">Consumer Goods</h3>
        <p>Quality products for everyday use</p>
      </div>
    </div>
  </section>

  <!-- About Section -->
  <section class="py-8 bg-neutral-700 rounded-lg mt-8">
    <h2 class="text-3xl font-bold mb-4 text-center">About Our Company</h2>
    <p class="text-center max-w-2xl mx-auto">
      We are a leading distribution company providing quality products and services to businesses across the region. 
      With years of experience and a commitment to excellence, we ensure timely delivery and customer satisfaction.
    </p>
  </section>

  <!-- Contact Section -->
  <section class="py-8">
    <h2 class="text-3xl font-bold mb-4 text-center">Contact Us</h2>
    <div class="grid grid-cols-1 md:grid-cols-3 gap-4 text-center">
      <div>
        <h3 class="text-xl font-bold">Address</h3>
        <p>123 Business Street, City, Country</p>
      </div>
      <div>
        <h3 class="text-xl font-bold">Phone</h3>
        <p>+1 (555) 123-4567</p>
      </div>
      <div>
        <h3 class="text-xl font-bold">Email</h3>
        <p>info@yourcompany.com</p>
      </div>
    </div>
  </section>
</Layout>